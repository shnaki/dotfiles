function! s:vimfiler_my_settings()
  nmap <buffer> q <Plug>(vimfiler_exit)
  nmap <buffer> Q <Plug>(vimfiler_hide)
endfunction
 
 
" Edit file by tabedit.
let g:vimfiler_edit_action = 'edit'

" Like Textmate icons.
